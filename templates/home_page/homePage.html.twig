{% extends 'base.html.twig' %}

{% block title %}Page d'accueil{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1100px; width: 95%; font: 18px/1.5 sans-serif; display:flex; gap: 3rem; flex-wrap:wrap; justify-content: space-evenly}
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% for user in users %}

        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">{{user.lastName}}</h5>
                <p class="card-text">{{user.firstName}}</p>
                <a href="{{path('app_create_form', {'id':user.id})}}" class="btn btn-success">Modifier</a>
                <a href="#" class="btn btn-info">Supprimer</a>
                <a href="" class="btn btn-danger">Ajouter</a>
            </div>   
        </div>

    {% endfor %}
  
</div>
{% endblock %}
